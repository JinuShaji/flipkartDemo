 <div class="container">
<div class="card mb-3 " style="max-width: 400px;">
  <div class="row g-0">
    {{#each product}}
    <div class="col-md-4 cart" style="margin-top: 10px;">
      <img src="/images/product/{{this.image}}" class="img-fluid rounded-start" alt="...">
    </div>
    <div class="col-md-8 cart" style="margin-top: 10px;">
      <div class="card-body">
        <h5  class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.discription}} </p>
        <h5 class="card-title">{{this.price}}</h5>
        <h5 class="card-title">{{this.Qnty}}</h5>
        <p class="card-text"><small class="text-muted"></small></p>
    </div>
    </div>
    {{/each}}
  </div>
